mixin menuLink(title, href = "#")
    li.header-menu-item
        a.header-menu-link(href= href)= title

mixin headerBottomItem(number, title)
    .header-bottom-item
        span.header-bottom-number= number
        span.header-bottom-text= title

mixin blockBox(caption, title, desc)
    .block-box
        h3.block-box-caption= caption
        h2.block-box-heading= title
        if desc
            p.block-box-desc= desc

mixin aboutItem(src, title, alt = "")
    .about-item
        img.about-image(src= src alt= alt)
        .about-content
            i.fa.fa-users.about-icon
            span.about-title= title

mixin serviceItem(src, title, desc)
    .service-item
        img.service-img(src= src)
        .service-item-info
            h3.service-item-title= title 
            p.service-item-desc= desc

mixin wedoItem(src, title, desc, active = "")
    .wedo-item(class= active)
        .wedo-item-header
            img(src= src).wedo-item-icon
            h3.wedo-item-title= title 
            i.fal.fa-angle-down.wedo-item-arrow
        .wedo-item-content
            .wedo-item-text= desc

mixin quoteItem(src = "../images/img-quote.png", type = false, desc = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Veritatis, placeat ab a cumque in adipisci laudantium explicabo alias illo praesentium vitae odit magni harum molestias dolor nisi, saepe voluptas doloremque!", author = "Jon Doe")
    .quote-item
        if type == false
            .quote-icon
                img(src= src)
        else
            img(src= src).quote-image
        .quote-info
            p.quote-desc= desc
            span.quote-author= author